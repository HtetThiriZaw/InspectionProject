@model InspectionProject.Models.InspectionRecordsViewModel
@{
    ViewBag.Title = "Index";
}

<div id="create-button">
    <button type="submit" class="btn" onclick="@Url.Action("CreateRecord", "Inspection")">Create New Record</button>
</div>

<div>
    <table id="datatable" class="table table-striped table-bordered table-hover col-xs-12">
        <thead>
            <tr>
                <th>
                    <span>Record ID</span>
                </th>
                <th>
                    <span>Date Performed</span>
                </th>
                <th>
                    <span>Recorded By</span>
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var record in Model.InspectionRecords)
            {
                <tr onclick="location.href='@Url.Action("ViewRecord", "Inspection", new { recordID = record.RecordID })'">
                    <td>
                        @Html.DisplayFor(modelItem => record.RecordID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => record.RecordedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => record.DatePerformed)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

